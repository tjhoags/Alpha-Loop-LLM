# ================================================================================
# Alpha Loop LLM - Environment Configuration Template
# ================================================================================
# Copy this file to .env and fill in your credentials
# NEVER commit .env to source control
# ================================================================================

# ==========================================================================
# DATABASE - Azure SQL Server
# ==========================================================================
SQL_SERVER=your-server.database.windows.net
SQL_DB=alc_market_data
DB_USERNAME=your_username
DB_PASSWORD=your_password
# Optional: Full connection URL (overrides above)
# DATABASE_URL=mssql+pyodbc://user:pass@server/db?driver=ODBC+Driver+17+for+SQL+Server

# ==========================================================================
# DATA APIs
# ==========================================================================
# Polygon.io - Premium market data
PolygonIO_API_KEY=your_polygon_key

# Alpha Vantage - Stock data
ALPHAVANTAGE_API_KEY=your_alpha_vantage_key

# FRED - Federal Reserve Economic Data
FRED_API_KEY=your_fred_key

# Coinbase - Cryptocurrency data
COINBASE_API_KEY=your_coinbase_key
COINBASE_API_SECRET=your_coinbase_secret

# Massive - Large file storage
MASSIVE_ACCESS_KEY=your_massive_access_key
MASSIVE_SECRET_KEY=your_massive_secret_key
MASSIVE_ENDPOINT_URL=https://files.polygon.io

# ==========================================================================
# AI SERVICES (Optional)
# ==========================================================================
OPENAI_SECRET=your_openai_key
ANTHROPIC_API_KEY=your_anthropic_key
PERPLEXITY_API_KEY=your_perplexity_key
API_KEY=your_google_key

# ==========================================================================
# TRADING / IBKR
# ==========================================================================
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
# Port 7497 = Paper Trading (SAFE)
# Port 7496 = Live Trading (REAL MONEY - USE WITH CAUTION)
IBKR_CLIENT_ID=1

# ==========================================================================
# PATHS (Optional - uses defaults if not set)
# ==========================================================================
# Custom .env file location
# ALC_ENV_PATH=/path/to/custom.env

# Research document paths (semicolon-separated)
# RESEARCH_PATHS=/path/to/research1;/path/to/research2

# ==========================================================================
# RUNTIME OPTIONS
# ==========================================================================
LOG_LEVEL=INFO
USE_SQLITE=false
USE_FULL_UNIVERSE=true
