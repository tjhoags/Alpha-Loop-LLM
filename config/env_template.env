# ============================================================
# ALC-ALGO ENVIRONMENT CONFIGURATION
# Alpha Loop Capital Trading Platform
# ============================================================
# Copy this file to .env and fill in your API keys
# NEVER commit .env to version control!
# ============================================================

# ===========================================
# MARKET DATA APIs
# ===========================================

# Alpha Vantage (Free tier: 5 calls/min, 500 calls/day)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Interactive Brokers TWS
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1
IBKR_ACCOUNT=your_account_id

# Polygon.io (Stock market data)
POLYGON_API_KEY=your_polygon_key_here

# FRED (Federal Reserve Economic Data)
FRED_API_KEY=your_fred_key_here

# Fiscal.ai
FISCAL_AI_API_KEY=your_fiscal_ai_key_here

# Finviz (Elite subscription for API access)
FINVIZ_API_KEY=your_finviz_key_here

# ===========================================
# CRYPTOCURRENCY APIs
# ===========================================

# Coinbase
COINBASE_API_KEY=your_coinbase_key_here
COINBASE_API_SECRET=your_coinbase_secret_here

# ===========================================
# GOOGLE APIs
# ===========================================

# Google Cloud Project
GOOGLE_API_KEY_1=your_google_key_1_here
GOOGLE_API_KEY_2=your_google_key_2_here
GOOGLE_API_KEY_3=your_google_key_3_here

# Google Sheets Integration
GOOGLE_SHEETS_CREDENTIALS_PATH=config/google_credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# ===========================================
# AI/LLM APIs
# ===========================================

# OpenAI
OPENAI_API_KEY=your_openai_key_here
OPENAI_ORG_ID=your_org_id_here

# Anthropic Claude
ANTHROPIC_API_KEY=your_claude_key_here

# Perplexity
PERPLEXITY_API_KEY=your_perplexity_key_here

# Super.myninja AI
SUPER_MYNINJA_API_KEY=your_myninja_key_here

# ===========================================
# PRODUCTIVITY & NOTIFICATIONS
# ===========================================

# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your_signing_secret
SLACK_CHANNEL_ALERTS=#trading-alerts
SLACK_CHANNEL_REPORTS=#daily-reports

# Notion
NOTION_API_KEY=secret_your_notion_key_here
NOTION_DATABASE_ID=your_database_id_here

# Dropbox
DROPBOX_ACCESS_TOKEN=your_dropbox_token_here
DROPBOX_APP_KEY=your_app_key_here
DROPBOX_APP_SECRET=your_app_secret_here

# ===========================================
# DATABASE
# ===========================================

# PostgreSQL (Optional - for production)
DATABASE_URL=postgresql://user:password@localhost:5432/alc_algo

# Redis (For caching)
REDIS_URL=redis://localhost:6379/0

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Paths
DATA_PATH=./data
LOGS_PATH=./logs
PORTFOLIO_HISTORY_PATH=./data/portfolio_history

# Trading Settings
DEFAULT_POSITION_SIZE_PCT=2.0
MAX_POSITION_SIZE_PCT=10.0
MAX_PORTFOLIO_CONCENTRATION_PCT=25.0
DEFAULT_STOP_LOSS_PCT=8.0

# Risk Management
MAX_DAILY_LOSS_PCT=5.0
MAX_DRAWDOWN_PCT=15.0
KELLY_FRACTION=0.25

# ===========================================
# BACKTESTING
# ===========================================

BACKTEST_START_DATE=2020-01-01
BACKTEST_END_DATE=2024-01-01
BACKTEST_INITIAL_CAPITAL=100000

# ===========================================
# SCHEDULING
# ===========================================

# Morning scan time (EST)
MORNING_SCAN_TIME=08:30
# EOD analysis time (EST)
EOD_ANALYSIS_TIME=16:30

