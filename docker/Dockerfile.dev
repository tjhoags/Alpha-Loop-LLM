# Development image with all tools and debugging capabilities

FROM python:3.10-slim

# Labels
LABEL maintainer="Tom Hogan <tom@alphalooopcapital.com>"
LABEL organization="Alpha Loop Capital, LLC"
LABEL project="ALC-Algo"
LABEL description="Development environment for ALC-Algo"

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app \
    ALC_ALGO_ENV=development

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    git \
    vim \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copy requirements
COPY requirements.txt requirements-dev.txt ./

# Install Python dependencies (including dev dependencies)
RUN pip install --no-cache-dir -r requirements.txt -r requirements-dev.txt

# Create necessary directories
RUN mkdir -p data/raw data/processed data/portfolio data/logs data/models

# Copy application code
COPY . .

# Install package in editable mode
RUN pip install -e .

# Default command (can be overridden)
CMD ["python", "main.py"]

# Expose ports
EXPOSE 8000 8888

